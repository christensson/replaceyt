{
  "$schema": "https://json.schemastore.org/youtrack-app.json",
  "name": "replaceyt",
  "title": "Text Replacer",
  "description": "Replace text in youtrack tickets and articles.",
  "version": "0.1.0",
  "changeNotes": "Initial release",
  "vendor": {
    "name": "Marcus Christensson",
    "url": "https://github.com/christensson/replaceyt"
  },
  "minYouTrackVersion": "2024.3.0",
  "icon": "replaceyt-icon.svg",
  "widgets": [
    {
      "key": "replaceyt-global-cfg",
      "name": "Text Replacer Config",
      "indexPath": "replaceyt-global-cfg/index.html",
      "extensionPoint": "ADMINISTRATION_MENU_ITEM",
      "iconPath": "replaceyt-global-cfg/replaceyt-icon.svg",
      "description": "Configure text replacements for tickets and articles."
    }
  ],
  "modules": {
    "workflows": [
      {
        "name": "Replace Text in Ticket",
        "script": "replace-text-issue-wf.js"
      },
      {
        "name": "Replace Text in Article",
        "script": "replace-text-article-wf.js"
      }
    ]
  }
}